.todoform

    padding 1rem 1.5rem

    input
        box-sizing border-box
        width: 100%
        padding 0.5rem 1rem
        height: 2.5rem
        line-height: 1.2
        font-size 1rem
        border 1px solid rgba(10, 10, 10 ,0.2)
        background-color: rgba(0, 0, 0, .3)
        outline none
        color: #fff
        text-shadow rgba(0, 0, 0, .3) 0 1px 2px
        border-radius 0.3rem

        &::-webkit-input-placeholder
            color rgba(#fff, .6)



