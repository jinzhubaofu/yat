.projectbox
    position: relative
    flex 0 0 200px
    order 1
    background-color: #eee

    > button
        position: absolute
        height: 30px
        line-height: 24px
        text-align: center
        bottom 0
        left 0
        right 0
        width: 100%;
        border: none;
        border-top 1px solid #ddd
        background-color: #ddd
        padding: 0
        font-size 18px
        outline none
        color: #999

        &:hover
            background-color lighten(@background-color, 20%)

        &:active
            background-color darken(@background-color, 20%)


    > dialog
        position: fixed;
        box-sizing border-box;
        padding: 20px 20px 40px
        margin-left: -20%;
        width: 40%;
        top: 0;
        left: 50%;
        border: 1px solid transparent;
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
        box-shadow: rgba(0,0,0,.3) 1px 1px 3px;

        input
            box-sizing border-box
            width 100%
            padding: 0 10px
            border 1px #ccc solid
            height: 30px
            line-height 30px
            outline 0
            border-radius 3px

            &:focus
                border-color rgb(0, 159, 147)

        footer
            position: absolute
            bottom 0
            left 20px
            right 20px
            height: 30px
            line-height 30px
            text-align: right



@require './ProjectList.styl'


@media all and (max-width: 640px)
    .projectbox
        position fixed
        left -200px
        top 0
        bottom 0
        max-width 200px
        min-width 200px
        order 0
